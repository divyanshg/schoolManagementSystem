<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<script defer>
    var ctx = document.getElementById('myChart').getContext('2d');

    var dataFirst = {
        label: "Collection",
        data: [2, 5, 8, 1, 12, 20],
        backgroundColor: 'rgba(255, 0, 0 , 1)',
        borderColor: 'red'
    };

    var dataSecond = {
        label: "Fees",
        data: [5, 4, 10, 14, 20, 15],
        backgroundColor: 'rgba(0, 0, 255 , 1)',
        borderColor: 'blue'
    };

    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple'],
            datasets: [dataFirst, dataSecond]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

    var myChart = new Chart(document.getElementById('barchart').getContext('2d'), {
        type: 'bar',
        data: {
            labels: ["2015-01", "2015-02", "2015-03"],
            datasets: [{
                label: '# of Tomatoes',
                data: [12, 19, 3],
                backgroundColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: false,
            scales: {
                xAxes: [{
                    ticks: {
                        maxRotation: 90,
                        minRotation: 80
                    }
                }],
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });


    var myChart = new Chart(document.getElementById('piechart').getContext('2d'), {
        type: 'doughnut',
    data: {
        labels: ["Female",	"Male"],
        datasets: [{    
            data: [2424, 14040], // Specify the data values array
          
            borderColor: ['rgba(0, 0, 255 , 1)', 'rgba(255, 206, 86, 1)'], // Add custom color border 
            backgroundColor: ['rgba(0, 0, 255 , 1)', 'rgba(255, 206, 86, 1)'], // Add custom color background (Points and Fill)
            borderWidth: 1 // Specify bar border width
        }]},         
    options: {
      responsive: true, // Instruct chart js to respond nicely.
      maintainAspectRatio: false, // Add to prevent default behaviour of full-width/height 
    }
    });
</script>